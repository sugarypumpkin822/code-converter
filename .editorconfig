# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# For more information, visit: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# C++ source files
[*.{cpp,cc,cxx,c++}]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

# C++ header files
[*.{h,hpp,hh,hxx,h++}]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

# Qt specific files
[*.{pro,pri,prf}]
indent_size = 4
trim_trailing_whitespace = true

# Qt UI files
[*.ui]
indent_size = 2
trim_trailing_whitespace = true

# Qt resource files
[*.qrc]
indent_size = 2
trim_trailing_whitespace = true

# Qt translation files
[*.ts]
indent_size = 2
trim_trailing_whitespace = true

# CMake files
[CMakeLists.txt]
indent_size = 4
trim_trailing_whitespace = true

[*.cmake]
indent_size = 4
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_size = 2
trim_trailing_whitespace = true

# XML files
[*.xml]
indent_size = 2
trim_trailing_whitespace = true

# Python files (if any build scripts)
[*.py]
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,bash}]
indent_size = 4
trim_trailing_whitespace = true

# Batch files
[*.{bat,cmd}]
indent_size = 4
end_of_line = crlf
trim_trailing_whitespace = true

# PowerShell files
[*.ps1]
indent_size = 4
trim_trailing_whitespace = true

# Makefile
[Makefile]
indent_style = tab
trim_trailing_whitespace = true

[*.mk]
indent_style = tab
trim_trailing_whitespace = true

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4
trim_trailing_whitespace = true

# Documentation files
[*.{rst,txt}]
max_line_length = 80
trim_trailing_whitespace = true

# License files
[LICENSE*]
trim_trailing_whitespace = true
insert_final_newline = true

# Git files
[.git*]
trim_trailing_whitespace = true
insert_final_newline = true
